# This is not a "real" page. It is used simply to toggle help
storage none
auth none

# Boolean indicating if help is displayed in std mode
field show {
	stdmode none
	storage cookie
	default 0
}

# Redirect back to this page after toggling
field page {
	stdmode hidden
	storage page
}

# Use -onget here since this page is accessed via a link
submit -onget {
	cgi set show [toggle {0 1} [cgi get show]]
	cgi nextpage [cgi get page]
}
