field port4 {
	label "Port 4"
	type {enum auto 1000x 100x 1000fd 1000hd 100fd 100hd 10fd 10hd}
	stdmode {enum auto Auto 1000x "1000Base-X (Fibre)" 100x "100Base-FX (Fibre)" 1000fd "1000Base-T FD" 1000hd "1000Base-T HD" 100fd "100Base-TX FD" 100hd "100Base-TX HD" 10fd "10Base-T FD" 10hd "10Base-T HD"}
	editmode {select auto Auto 1000x "1000Base-X (Fibre)" 100x "100Base-FX (Fibre)" 1000fd "1000Base-T FD" 100fd "100Base-TX FD" 100hd "100Base-TX HD" 10fd "10Base-T FD" 10hd "10Base-T HD"}
	default auto
	help {Select mode for port 4.<br><b>Note:</b> Auto is strongly recommended for copper ports.<br>Fibre selection requires a compatible GBIC module and the selection must match the peer.}
	display display_field_help
}

field port4alarm {
	label "Port 4 Alarm"
	storagename alarm.switchport4
	type boolean
	help {Alarm if no link integrity on this port}
	display display_field_help
}

button submit {
	label Submit
	stdmode none
	submit {
		save_config
	}
}

button edit {
	label Edit
	editmode none
	setmode edit
}

button cancel {
	label Cancel
	stdmode none
}

