label "Switch"
title "Switch Settings"
help {Configure switch settings, including fibre selection for port 4 and duplex.}

accesslevel status

ifmodified_message

bar "Switch Settings"

text {
	display display_page_help
}

field port1 {
	label "Port 1"
	type {enum auto 1000fd 1000hd 100fd 100hd 10fd 10hd}
	stdmode {enum auto Auto 1000fd "1000Base-T FD" 1000hd "1000Base-T HD" 100fd "100Base-TX FD" 100hd "100Base-TX HD" 10fd "10Base-T FD" 10hd "10Base-T HD"}
	editmode {select auto Auto 1000fd "1000Base-T FD" 100fd "100Base-TX FD" 100hd "100Base-TX HD" 10fd "10Base-T FD" 10hd "10Base-T HD"}
	default auto
	help {Select mode for port 1.<br><b>Note:</b> Auto is strongly recommended for all installations.}
	display display_field_help
}

field port1alarm {
	label "Port 1 Alarm"
	storagename alarm.switchport1
	type boolean
	help {Alarm if no link integrity on this port}
	display display_field_help
}

field port1mgmt {
	label "Port 1 Management"
	storagename switch.isolate1
	type boolean
	help {Port 1 will <b>only</b> carry management traffic (web, snmp, etc.). This means that management is not posible "over the link".}
	display display_field_help
}

