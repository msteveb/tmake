	editmode {select auto Auto 1000fd "1000Base-T FD" 100fd "100Base-TX FD" 100hd "100Base-TX HD" 10fd "10Base-T FD" 10hd "10Base-T HD"}
	default auto
	help {Select mode for port 2.<br><b>Note:</b> Auto is strongly recommended for all installations.}
	display display_field_help
}

field port2alarm {
	label "Port 2 Alarm"
	storagename alarm.switchport2
