title "Web Interface Options"
label "User Options"
help {Per-user web interface options may be set here}

accesslevel admin

storage none
setmode edit

head {
<style>
div.elemlabel { width: 14em; }
</style>
}

bar "User Web Interface Options"

text {
	display display_page_help
}

field immediate {
	label "Immediately Apply Changes"
	type boolean
	default 0
	storage -persistent cookie
	help "If set, web interface changes are applied immediately"
	display display_field_help
}

# All these are cookies, so nothing to do on submit
button submit {
	label Submit
	submit {
		cgi success "Options Updated"
	}
}
